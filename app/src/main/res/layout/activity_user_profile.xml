<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    tools:context=".MenuCategories.UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/general_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/rus_font"
                android:padding="10dp"
                android:text="@string/menu_artbait"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                android:textSize="36sp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/blesna_vrash_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_1"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/blesna_vrash" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/blesna_koleb_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_2"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/blesna_koleb" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/vobler_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_3"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/vobler" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/topvoter_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_4"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/topvoter" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/myag_primanki_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_6"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/myag_primanki" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <RelativeLayout
                        android:id="@+id/vecki_chervi_card"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/banner_background">

                        <TextView
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rus_font"
                            android:padding="30dp"
                            android:text="@string/artbait_name_7"
                            android:textSize="30sp"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/vecki_chervi" />


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>